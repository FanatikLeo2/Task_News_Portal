9.
for i in Author.objects.order_by('-author_rating')[:1]:
	i.author_user.username
	i.author_rating

10.
for i in Post.objects.order_by('-post_rating')[:1]:
	i.post_time_in.strftime('%d.%m.%Y %H:%M')
	i.post_author.author_user.username
	i.post_rating
	i.post_title
	i.preview()

11.
for i in Comment.objects.filter(comment_post=Post.objects.order_by('-post_rating')[:1][0]):
	i.comment_time_in.strftime('%d.%m.%Y %H:%M')
	i.comment_user.username
	i.comment_rating
	i.comment_text